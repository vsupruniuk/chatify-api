{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended", "prettier"],
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "rules": {
    "@typescript-eslint/no-unused-vars": ["error", { "argsIgnorePattern": "req|res|next|metadataValue" }],
    "@typescript-eslint/consistent-type-definitions": ["error", "interface"],
    "spaced-comment": "off",
    "no-console": "off",
    "object-shorthand": "off",
    "eqeqeq": "error"
  },
  "ignorePatterns": ["src/testsOld/"]
}
