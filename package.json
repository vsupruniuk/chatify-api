{
  "name": "chatify-api",
  "version": "1.3.1",
  "description": "NestJS-based API for chatting application. API provides authorization capabilities, encrypted chats between users with real-time features",
  "author": "Vladyslav Supruniuk",
  "private": false,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vsupruniuk/chatify-api"
  },
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "lint:ci": "eslint \"src/**/*.ts\"",
    "type-check": "tsc",
    "test": "npm run test:unit && npm run test:e2e",
    "test:cov": "jest --coverage --runInBand",
    "test:unit": "jest --runInBand --coverage=false",
    "test:e2e": "cross-env NODE_OPTIONS=\"-r ts-node/register\" jest --config jest-e2e.config.ts --runInBand --coverage=false",
    "typeorm": "ts-node ./node_modules/typeorm/cli",
    "migration:run": "npm run typeorm migration:run -- -d dist/configs/typeOrm.config.js",
    "migration:generate": "npm run typeorm -- -d dist/configs/typeOrm.config.js migration:generate src/db/migrations/$npm_config_name",
    "migration:revert": "npm run typeorm -- -d dist/configs/typeOrm.config.js migration:revert",
    "prepare": "husky"
  },
  "dependencies": {
    "@nestjs/common": "11.1.13",
    "@nestjs/core": "11.1.13",
    "@nestjs/jwt": "11.0.2",
    "@nestjs/platform-express": "11.1.13",
    "@nestjs/platform-socket.io": "11.1.13",
    "@nestjs/throttler": "6.5.0",
    "@nestjs/typeorm": "11.0.0",
    "@nestjs/websockets": "11.1.13",
    "bcrypt": "6.0.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.3",
    "compression": "1.8.1",
    "cookie-parser": "1.4.7",
    "dayjs": "1.11.19",
    "helmet": "8.1.0",
    "nodemailer": "8.0.1",
    "pg": "8.18.0",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.2",
    "typeorm": "0.3.28"
  },
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "@nestjs/cli": "11.0.16",
    "@nestjs/schematics": "11.0.9",
    "@nestjs/testing": "11.1.13",
    "@testcontainers/postgresql": "11.11.0",
    "@types/bcrypt": "6.0.0",
    "@types/compression": "1.8.1",
    "@types/cookie-parser": "1.4.10",
    "@types/express": "5.0.6",
    "@types/jest": "30.0.0",
    "@types/multer": "2.0.0",
    "@types/node": "25.2.3",
    "@types/nodemailer": "7.0.9",
    "@types/pg": "8.16.0",
    "@types/supertest": "6.0.3",
    "cross-env": "10.1.0",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.5",
    "eslint-plugin-unicorn": "62.0.0",
    "globals": "17.3.0",
    "husky": "9.1.7",
    "jiti": "2.6.1",
    "prettier": "3.8.1",
    "socket.io-client": "4.8.3",
    "supertest": "7.2.2",
    "testcontainers": "11.11.0",
    "ts-jest": "29.4.6",
    "ts-node": "10.9.2",
    "typescript": "5.9.3",
    "typescript-eslint": "8.55.0"
  },
  "overrides": {
    "glob": "13.0.1"
  }
}
